<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/included_rl_color_to_recognize"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include
            layout="@layout/include_rl_recognized_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_recognize"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/act_recognize"
            app:backgroundTint="#000000"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_open_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:src="@mipmap/act_open_camera"
            app:backgroundTint="#000000"/>

    </LinearLayout>

</merge>
