<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_recognized_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_color_name_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/tv_color_name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_name_cn"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/tv_color_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_name_en"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_color_rgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_hex"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/tv_color_hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_rgb"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/tv_color_cmyk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_color_hsv"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>