<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_color_to_recognize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_hex_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/et_color_to_recognize_hex"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_hex_prefix"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_black"
        android:textColorHint="@color/hint_black"
        android:textCursorDrawable="@null"
        android:selectAllOnFocus="true"
        android:hint="@string/hint_hex"
        android:singleLine="true"/>

</RelativeLayout>